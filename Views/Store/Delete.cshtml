@model Киберфорум.Models.Stuff

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалениие товара</h1>

<h3>
    Вы уверены что хотите удалить товар @Html.DisplayFor(model => model._Name)?
</h3>
<div>    
    <form asp-action="Delete">
        <a asp-controller="Store" asp-action="Index" class="btn btn-dark">Вернуться к выбору товара</a> | 
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> 
    </form>
</div>
