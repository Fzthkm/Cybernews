@model Киберфорум.Models.Stuff

@{
    ViewData["Title"] = "Добавить товар";
}

<h1 style="text-align:center;">Добавить товар</h1>
<div class="row" style="justify-content:center;">
    <div class="col-md-4" >
        <form asp-action="Create">
            <hr />
            <h5 style="text-align:center;">Основная информация</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="_Name" class="control-label">Название</label>
                <input asp-for="_Name" class="form-control" />
                <span asp-validation-for="_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_Cost" class="control-label">Стоимость</label>
                <input type="number" asp-for="_Cost" class="form-control" />
                <span asp-validation-for="_Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Тип товара</label>
                <input asp-for="Type" class="form-control" />
            </div>
            <div>
                <label asp-for="ImageUrl" class="control-label">Адрес изображения на сервере</label>
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <hr />
            <h5 style="text-align:center;">Дополнительная информация</h5>
            <hr />
            <div>
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea rows="4" asp-for="Description" class="form-control" ></textarea>
            </div>
            <div>
                <label asp-for="Firm" class="control-label">Производитель</label>
                <input asp-for="Firm" class="form-control" />
            </div>
            <div>
                <label asp-for="Color" class="control-label">Цвет</label>
                <input asp-for="Color" class="form-control" />
            </div>
            <div>
                <label asp-for="Size" class="control-label">Размер</label>
                <input asp-for="Size" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input style="text-align:center;" type="submit" value="Добавить товар" class="btn btn-dark" /> 
                <a asp-controller="Store" asp-action="Index" class="btn btn-dark">Вернуться назад</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
